{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"type": "shell",
			"command": "hugo --source ./src",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Serve",
			"type": "shell",
			"command": "hugo server -D --source ./src",
			"group": {
				"kind": "build"
			},
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "New Post",
			"type": "shell",
			"command": "title=\"${input:title}\" && slug=\"${title// /-}\" && hugo new content/post/${slug,,}/index.md --source ./src",
			"problemMatcher": []
		}
	],
	"inputs": [
		{
			"id": "title",
			"description": "Enter the title of the new post",
			"type": "promptString"
		}
	]
}